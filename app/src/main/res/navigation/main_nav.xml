<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homepageFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="com.appvision.newsapp.presentation.HomeFragment.HomepageFragment"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage">
        <action
            android:id="@+id/action_homepageFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:popUpTo="@id/homepageFragment"
           >

        </action>
        <action
            android:id="@+id/action_homepageFragment_to_bookmarksFragment"
            app:destination="@id/bookmarksFragment" />

    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.appvision.newsapp.presentation.ArticleFragment.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" >
        <argument android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="com.appvision.newsapp.presentation.BookmarksFragment.BookmarksFragment"
        android:label="fragment_bookmarks"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_bookmarksFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
</navigation>